#include<stdio.h>
#include<stdint.h>
#include<limits.h> 

#define EFAULT 84

enum rxe_mem_type {
	RXE_MEM_TYPE_NONE,
	RXE_MEM_TYPE_DMA,
	RXE_MEM_TYPE_MR,
	RXE_MEM_TYPE_FMR,
	RXE_MEM_TYPE_MW,
};

int mem_check_range(enum rxe_mem_type type, uint64_t iova, size_t length, uint64_t mem_iova, size_t mem_length) {
	/* === PARTIAL GOOD SINK ===
	 * Fix applies ONLY when:
	 *    mem_type is MR or FMR and iova is within a small range
	 *    and length less than a certain value
	 */
	switch (type) {
	case RXE_MEM_TYPE_DMA:
		return 0;

	case RXE_MEM_TYPE_MR:
	case RXE_MEM_TYPE_FMR:
		if (iova >= mem_iova &&
		    iova < (mem_iova + 100) &&
		    length <= mem_length) {
			/* Safe range */
			return 0;
		}
		/* === OUTSIDE SAFE RANGE ===
		 * No real range check; just return error
		 */
		return -EFAULT;

	default:
		return -EFAULT;
	}
}

int main(){
	return 0;
}
